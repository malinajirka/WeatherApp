<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/global_vertical_margin"
                android:paddingLeft="@dimen/global_horizontal_margin"

                android:paddingRight="@dimen/global_horizontal_margin"
                android:paddingTop="@dimen/global_vertical_margin">

    <ImageView
        android:id="@+id/weather_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <cz.malinajiri.showcase.weatherapp.view.ProximaNovaTextView
        android:id="@+id/title"
        style="@style/WeatherApp.TextView.Semibold.LocationTitle"
        android:layout_marginLeft="@dimen/default_list_content_left_margin"
        />

    <cz.malinajiri.showcase.weatherapp.view.ProximaNovaTextView
        android:id="@+id/subtitle"
        style="@style/WeatherApp.TextView.Regular.LocationSubtitle"
        android:layout_below="@id/title"
        android:layout_marginLeft="@dimen/default_list_content_left_margin"
        />


    <cz.malinajiri.showcase.weatherapp.view.ProximaNovaTextView
        android:id="@+id/temperature"
        style="@style/WeatherApp.TextView.Light.LocationTemperature"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/global_widget_horizontal_margin"
        />

</RelativeLayout>