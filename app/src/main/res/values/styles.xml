<resources>

    <!-- Base application theme. -->
    <!-- different for various screen sizes -->
    <style name="WeatherApp.Theme" parent="Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/WeatherApp.ActionBar</item>
        <item name="homeAsUpIndicator">@drawable/up_nav</item>
        <!--Disables transition animation when switching activities-->
        <item name="android:windowAnimationStyle">@null</item>
    </style>


    <!-- ActionBar styles -->
    <style name="WeatherApp.ActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/ab_background</item>
    </style>


    <style name="WeatherApp"></style>

    <style name="WeatherApp.Drawer"></style>

    <style name="WeatherApp.TextView.Semibold.DrawerItem">
        <item name="android:textSize">@dimen/drawer_text_size</item>
        <item name="android:textColor">@drawable/selector_drawer_textview</item>
        <item name="android:paddingLeft">@dimen/global_widget_horizontal_margin</item>
    </style>

    <style name="WeatherApp.Drawer.ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:divider">@color/drawer_divider</item>
        <item name="android:dividerHeight">@dimen/drawer_list_divider_height</item>
        <item name="android:background">@android:color/white</item>

    </style>

    <style name="WeatherApp.TextView.Semibold.LocationTitle">
        <item name="android:textSize">@dimen/default_list_title_size</item>
        <item name="android:layout_marginLeft">@dimen/default_list_content_left_margin</item>
    </style>


    <style name="WeatherApp.TextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/global_default_text_color</item>
    </style>

    <style name="WeatherApp.TextView.Semibold">
        <item name="fontName">proximanova_semibold.otf</item>
    </style>

    <style name="WeatherApp.TextView.Regular">
        <item name="fontName">proximanova_regular.otf</item>
    </style>

    <style name="WeatherApp.TextView.Light">
        <item name="fontName">proximanova_light.ttf</item>
    </style>


    <style name="WeatherApp.TextView.Regular.LocationSubtitle">
        <item name="android:textSize">@dimen/default_list_subtitle_size</item>
    </style>

    <style name="WeatherApp.TextView.Light.LocationTemperature">
        <item name="android:textSize">@dimen/default_list_temperature_size</item>
        <item name="android:textColor">@color/global_default_list_temperature</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/global_widget_horizontal_margin</item>

    </style>

    <style name="WeatherApp.TextView.Semibold.TodayCityAndCountry">
        <item name="android:textSize">@dimen/fragment_today_location_text</item>
        <item name="android:textColor">@color/global_default_text_color</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/fragment_today_default_margin_top</item>

    </style>

    <style name="WeatherApp.TextView.Regular.TodayTemperature">
        <item name="android:textSize">@dimen/fragment_today_city_and_country</item>
        <item name="android:textColor">@color/fragment_today_temperature_text</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/fragment_today_siblings_margin_top</item>

    </style>

    <style name="WeatherApp.TextView.Semibold.TodayInformation">
        <item name="android:textSize">@dimen/fragment_today_information</item>
        <item name="android:textColor">@color/global_default_text_color</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">@dimen/fragment_today_information_drawable_padding
        </item>
        <item name="android:gravity">center</item>
    </style>


    <style name="WeatherApp.TodayDivider">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/fragment_today_default_margin_top</item>
        <item name="android:src">@drawable/today_divider</item>
    </style>

    <style name="WeatherApp.TodayInformationContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/fragment_today_default_margin_top</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingLeft">@dimen/fragment_today_information_container_padding</item>
        <item name="android:paddingRight">@dimen/fragment_today_information_container_padding</item>

    </style>

    <style name="WeatherApp.TodayShareButton" parent="android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/fragment_today_default_margin_top</item>
        <item name="android:background">@drawable/selector_transparent_button</item>
        <item name="fontName">proximanova_semibold.otf</item>
        <item name="android:paddingLeft">@dimen/global_default_button_padding</item>
        <item name="android:paddingRight">@dimen/global_default_button_padding</item>
        <item name="android:drawablePadding">@dimen/fragment_today_button_drawable_padding</item>
        <item name="android:textColor">@color/fragment_today_share_orange</item>

    </style>

    <style name="WeatherApp.TextView.Semibold.PreferenceTitle">
        <item name="android:textColor">@color/global_default_text_color</item>
        <item name="android:textSize">@dimen/preference_text_size_title</item>
    </style>

    <style name="WeatherApp.TextView.Regular.PreferenceSummary">
        <item name="android:textSize">@dimen/preference_text_size</item>
    </style>

    <style name="WeatherApp.TextView.Semibold.DialogTitle">
        <item name="android:textColor">@color/list_dialog_title_blue</item>
        <item name="android:textSize">@dimen/list_dialog_title</item>
        <item name="android:paddingLeft">@dimen/global_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/global_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/global_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/global_vertical_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/list_dialog_title_height</item>
    </style>

    <style name="WeatherApp.Drawer.ItemContainer">

        <item name="android:paddingLeft">@dimen/global_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/global_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/global_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/global_vertical_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:height">@dimen/drawer_list_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>

    </style>

    <style name="WeatherApp.ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:divider">@drawable/inset_divider_default_list</item>
    </style>

    <style name="WeatherApp.EmptyProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:id">@android:id/empty</item>
    </style>


</resources>
